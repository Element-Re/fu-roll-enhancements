<fieldset>
  <legend>
    <label>
      <i class="fas fa-scale-balanced"></i>
      {{localize "fu-roll-enhancements.autoSpend.options.title"}}
    </label>
  </legend>
  <div class="roll-options">
    <label class="checkbox">
      <span>
        {{#if hasDefaultCost}}
        {{localize "fu-roll-enhancements.autoSpend.options.override.label"}}
        {{else}}
        {{localize "fu-roll-enhancements.autoSpend.options.enable.label"}}
        {{/if}}
      </span>
      <input
        name="flags.fu-roll-enhancements.autoSpend.enable" type="checkbox"
        {{checked item.flags.fu-roll-enhancements.autoSpend.enable}}>
    </label>
  </div>
  <div class="roll-fields grid grid-3col gap-10">
    <div class="flexcol flex-group-center">
      <label for="flags.fu-roll-enhancements.autoSpend.cost">
        {{localize "fu-roll-enhancements.autoSpend.options.cost.label"}}
      </label>
      <input type="number" step="1" min="0" name="flags.fu-roll-enhancements.autoSpend.cost"
        value="{{item.flags.fu-roll-enhancements.autoSpend.cost}}">
    </div>
    <div class="flexcol flex-group-center">
      <label for="flags.fu-roll-enhancements.autoSpend.resourceType">
        {{localize "fu-roll-enhancements.autoSpend.options.resourceType.label"}}
      </label>
      <select name="flags.fu-roll-enhancements.autoSpend.resourceType">
        {{selectOptions resourceTypes labelAttr="label" selected=item.flags.fu-roll-enhancements.autoSpend.resourceType localize=true}}
      </select>
    </div>
    <div class="flexcol flex-group-center">
      <label for="flags.fu-roll-enhancements.autoSpend.perTarget" class="resource-label-m">
        {{localize "fu-roll-enhancements.autoSpend.options.perTarget.label"}}
      </label>
      <input name="flags.fu-roll-enhancements.autoSpend.perTarget" type="checkbox"
        {{checked item.flags.fu-roll-enhancements.autoSpend.perTarget}}>
    </div>
  </div>
</fieldset>