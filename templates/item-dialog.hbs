<div class="projectfu">
  <div class="items-list">
    <div class="item">
      <div class="item-name">
        <div class="item-image">
          <img src="{{item.img}}">
        </div>
        <h4 class="resource-content">
          <span class="resource-text-m gap-3" style="display: flex; align-items: center;">
            {{#if (eq item.system.type "skill")}}
            <span class="is-skill"></span>
            {{/if}}
            {{#if (eq item.type "spell")}}
            <span class="is-spell"></span>
            {{/if}}
            {{#if (eq item.system.type.value "melee")}}
            <span class="is-melee"></span>
            {{/if}}
            {{#if (eq item.system.type.value "ranged")}}
            <span class="is-range"></span>
            {{/if}}
            {{item.name}}
            {{#if item.system.isOffensive}}
            <span class="is-offensive"></span>
            {{/if}}
            {{#if item.system.isMartial}}
            <span class="is-martial"></span>
            {{/if}}
            <span>
              {{#if (eq item.type "spell")}}
              {{#if item.system.mpCost.value}}
              ⬥ {{item.system.mpCost.value}} {{localize "FU.MindAbbr"}}
              {{/if}}
              {{#if item.system.target.value}}
              ⬥ {{item.system.target.value}}
              {{/if}}
              {{else}}
              {{#if item.system.quality.value}}
              ⬥ {{item.system.quality.value}}
              {{/if}}
              {{/if}}
            </span>
          </span>
        </h4>
      </div>
    </div>
  </div>
  {{> @partial-block }}
</div>